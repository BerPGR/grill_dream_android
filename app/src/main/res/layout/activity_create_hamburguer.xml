<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.CreateHamburguerActivity">
    
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_chevron_left_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/btn_back"
        >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager"
                    android:layout_width="350dp"
                    android:layout_height="300dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Types of meat"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:layout_gravity="start"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"/>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/btn_alcatra"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/alcatra"
                                android:scaleType="fitCenter"
                                android:background="@drawable/rounded_button_disable"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Alcatra"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/btn_patinho"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/patinho"
                                android:scaleType="fitCenter"
                                android:background="@drawable/rounded_button_disable"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Patinho"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/btn_wagyu"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/wagyu"
                                android:scaleType="fitCenter"
                                android:background="@drawable/rounded_button_disable"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Wagyu"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/btn_paleta"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/paleta"
                                android:scaleType="fitCenter"
                                android:background="@drawable/rounded_button_disable"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Paleta"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/btn_acem"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/acem"
                                android:scaleType="fitCenter"
                                android:background="@drawable/rounded_button_disable"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="AcÃ©m"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                />

                        </LinearLayout>


                    </LinearLayout>

                </HorizontalScrollView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toppings"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:layout_gravity="start"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"/>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginHorizontal="20dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/btn_alface"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/alface"
                                android:scaleType="fitCenter"
                                android:background="@drawable/rounded_button_disable"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Lettuce"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/btn_tomate"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/tomate"
                                android:scaleType="fitCenter"
                                android:background="@drawable/rounded_button_disable"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tomatoes"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/btn_queijo"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/queijo"
                                android:scaleType="fitCenter"
                                android:background="@drawable/rounded_button_disable"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cheese"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/btn_cebola"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/cebola"
                                android:scaleType="fitCenter"
                                android:background="@drawable/rounded_button_disable"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Onions"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginLeft="20dp"
                            android:gravity="center">

                            <ImageButton
                                android:id="@+id/btn_picles"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:src="@drawable/picles"
                                android:scaleType="fitCenter"
                                android:background="@drawable/rounded_button_disable"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pickles"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="18sp"
                                />

                        </LinearLayout>


                    </LinearLayout>

                </HorizontalScrollView>

                <Button
                    android:id="@+id/btn_add_to_cart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add to cart"
                    android:backgroundTint="@color/blue"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    />
            </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>